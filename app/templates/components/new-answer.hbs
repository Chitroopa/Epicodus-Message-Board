<div class="row">
  <h3>Your Answer</h3>
  <div class="col-md-8">
    <form>
      <div class="form-group">
        {{textarea rows="8" cols="50" class="form-control" id="answer" value=answer}}
      </div>
      <div class="form-group">
        <label>Author</label>
        {{input type="text" class="form-control" value=author id="author" placeholder="Add author"}}
      </div>
      <hr>
      <button {{action 'saveAnswer1'}} class="btn btn-primary">Post Your Answer</button>
    </form>
  </div>
</div>
