{{#if addNewQuestion}}
<div class="row">
  <div class="col-md-8">
    <form>
      <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" value=title id="title" placeholder="What's your programming question? Be specific"}}
      </div>
      <div class="form-group">
        {{textarea rows="8" cols="50" class="form-control" id="content" value=content placeholder="Explain your question"}}
      </div>
      <div class="form-group">
        <label>Additional notes</label>
        {{input type="text" class="form-control" value=notes id="notes"}}
      </div>
      <div class="form-group">
        <label>Author</label>
        {{input type="text" class="form-control" value=author id="author" placeholder="Add author"}}
      </div>
      <button {{action 'saveQuestion1'}} class="btn btn-primary">Post your Question</button>
    </form>
  </div>
</div>

{{else}}
  <button {{action 'questionFormShow'}} class="btn btn-primary">Ask Question</button>
{{/if}}
