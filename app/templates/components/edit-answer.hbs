{{#if editAnswer}}
<h4>Edit Answer</h4>
<div class="row">
  <div class="col-md-8">
    <form>
      <div class="form-group">
        <textarea class="text-style" id="edit-answer" rows="8" cols="100" placeholder={{answerForQuestion.answer}}></textarea>
        <!-- {{textarea rows="8" cols="50" class="form-control" id="edit-answer" value=answer placeholder=answerForQuestion.answer}} -->
      </div>
      <div class="form-group">
        <label>Author</label>
        {{input type="text" class="form-control" value=author id="edit-author" placeholder=answerForQuestion.author}}
      </div>
      <hr>
      <button {{action 'updateAnswer1' answerForQuestion}} class="btn btn-primary">Save</button>
    </form>
  </div>
</div>
{{else}}
  <a {{action 'editAnswerFormShow'}}>edit</a> <a {{action 'deleteAnswer1' answerForQuestion}}>delete</a>
{{/if}}
