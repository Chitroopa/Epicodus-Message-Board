{{#if editQuestion}}
<div class="row">
  <div class="col-md-8">
    <form>
      <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" value=title id="update-title" placeholder=question.title}}
      </div>
      <div class="form-group">
        {{textarea rows="8" cols="50" class="form-control" id="update-content" value=content placeholder=question.content}}
      </div>
      <hr>
      <div class="form-group">
        <label>Additional notes</label>
        {{input type="text" class="form-control" value=notes id="update-notes" placeholder=question.notes}}
      </div>
      <div class="form-group">
        <label>Author</label>
        {{input type="text" class="form-control" value=author id="update-author" placeholder=question.author}}
      </div>
      <hr>
      <button {{action 'updateQuestion1' question}} class="btn btn-primary">save</button>
    </form>
  </div>
</div>
{{else}}
  <a {{action 'editQuestionFormShow'}}>edit</a> <a {{action 'deleteQuestion1' question}}>delete</a>
{{/if}}
